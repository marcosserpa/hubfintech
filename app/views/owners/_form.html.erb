  <% end %>

  <div class = 'form-group'>
    <%= f.label :company %><br>
    <%= f.check_box :company %>
  </div>
  <div class = 'form-group'>
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :company_name %><br>
    <%= f.text_field :company_name, class: 'form-control' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :birthday %><br>
    <%= f.date_select :birthday, include_blank: true, class: 'form-control' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :owner_national_number %><br>
    <%= f.text_field :owner_national_number, class: 'form-control' %>
  </div>

  <div class = 'actions'>
    <%= f.submit %>
  </div>
